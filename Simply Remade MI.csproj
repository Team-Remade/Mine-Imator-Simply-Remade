<Project Sdk="Godot.NET.Sdk/4.5.1">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <RootNamespace>SimplyRemadeMI</RootNamespace>
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
    
  <ItemGroup>
    <PackageReference Include="ImGui.NET" Version="1.91.6.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
  </ItemGroup>
    
  <ItemGroup>
    <Folder Include="src\core\block\blocks\" />
  </ItemGroup>
  <Target Name="DownloadFFmpeg" BeforeTargets="Publish">
    <Exec Command="powershell -ExecutionPolicy Bypass -File &quot;$(MSBuildProjectDirectory)\download-ffmpeg.ps1&quot;" />
  </Target>
</Project>